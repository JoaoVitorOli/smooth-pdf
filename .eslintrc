{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:sonarjs/recommended-legacy",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "project": "tsconfig.json",
    "tsconfigRootDir": "./",
    "sourceType": "module",
    "ecmaVersion": "latest"
  },
  "plugins": [
    "sonarjs",
    "@typescript-eslint/eslint-plugin"
  ],
  "rules": {
    "semi": "error",
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ]
  },
}